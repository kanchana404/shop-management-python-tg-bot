# Bot Tokens (comma-separated for mirror bots)
BOT_TOKENS=your_bot_token_1,your_bot_token_2

# MongoDB Configuration
MONGO_ROOT_PASSWORD=your_secure_mongo_root_password
MONGO_PASSWORD=your_secure_mongo_password
MONGO_URI=mongodb://telegram_shop:your_secure_mongo_password@mongodb:27017/telegram_shop?authSource=telegram_shop
DATABASE_NAME=telegram_shop

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password

# Telegram Configuration
MAIN_GROUP_ID=-1001234567890
MAIN_CHANNEL_ID=-1001234567890

# Admin Configuration
